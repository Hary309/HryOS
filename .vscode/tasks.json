{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ISO",
            "type": "shell",
            "command": "grub-mkrescue -o HryOS.iso iso",
            "problemMatcher": []
        },
        {
            "label": "Run QEMU Kernel",
            "type": "shell",
            "command": "qemu-system-i386 -serial stdio -kernel build/HryOS",
            "problemMatcher": []
        },
        {
            "label": "Run QEMU CD-ROM",
            "type": "shell",
            "command": "qemu-system-i386 -cdrom HryOS.iso",
            "dependsOn": [
                "Build ISO"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run QEMU in GDB mode",
            "type": "shell",
            "command": "qemu-system-i386 -serial stdio -s -S -kernel build/HryOS",
            "problemMatcher": [],
        },
        {
            "label": "Run Bochs",
            "type": "shell",
            "command": "bochs -f config/bochsrc.bxrc",
            "dependsOn": [
                "Build ISO"
            ],
            "problemMatcher": []
        }
    ]
}